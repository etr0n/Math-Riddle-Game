<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayoutLevel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LevelFragment">

        <Chronometer
            android:id="@+id/c_meter"
            android:layout_width="76dp"
            android:layout_height="24dp"
            android:layout_margin="20dp"
            android:layout_marginStart="329dp"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#845fb3"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView4_kiekis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/LevelBack_btn"
            android:layout_width="51dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#121212"
            android:src="@drawable/abc_vector_test"
            app:layout_constraintBottom_toTopOf="@+id/c_meter"
            app:layout_constraintEnd_toStartOf="@+id/Level_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/abc_vector_test" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="148dp"
            android:text="Submit"
            app:backgroundTint="#845fb3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/answer_textField" />

        <EditText
            android:id="@+id/answer_textField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="150dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="Answer"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/submit_btn"
            app:layout_constraintHorizontal_bias="0.608"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Error_textView"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/hint_btn"
            android:layout_width="51dp"
            android:layout_height="43dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/qm"
            app:layout_constraintBottom_toTopOf="@+id/c_meter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/qm" />

        <TextView
            android:id="@+id/number_textView"
            android:layout_width="33dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="9dp"
            android:text="X"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/c_meter"
            app:layout_constraintStart_toEndOf="@+id/Level_textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/Level_textView"
            android:layout_width="60dp"
            android:layout_height="27dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Level"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/c_meter"
            app:layout_constraintStart_toEndOf="@+id/LevelBack_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.818" />

        <TextView
            android:id="@+id/Error_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="493dp"
            android:layout_marginBottom="200dp"
            android:textColor="#845fb3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4_kiekis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"

            android:layout_marginTop="16dp"
            android:layout_marginEnd="177dp"
            android:textColor="#F44336"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c_meter"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textView_sequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="184dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="169dp"
            android:textColor="#FFFFFF"
            android:textColorLink="#512DA8"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/submit_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4_kiekis"
            app:layout_constraintVertical_bias="0.213" />

        <View
            android:id="@+id/view_draw"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="260dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>